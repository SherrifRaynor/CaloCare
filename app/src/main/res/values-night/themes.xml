<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CaloCare" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lemon_chiffon</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- ActionBar title color for dark mode -->
        <item name="actionBarTheme">@style/MyActionBarDark</item>
    </style>

    <style name="MyActionBarDark" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:titleTextColor">@color/white</item>
        <item name="background">@color/tumbleweed</item>
    </style>
</resources>